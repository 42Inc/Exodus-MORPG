<%- provide(:titlepage, "#{@controller} : #{@page}") %>
<%= render :template => "layouts/application" %>

<h1 align="center" >
  <font size="6" face=<%= @face %> color="green"> Admin </font>
</h1>

<table align="center">
  <tr>
    <td>
      <div class="row" align="center">
        <div class="col-md-6 col-md-offset-3" align="center">
          <font size="4" face=<%= @face %> color="gold">
            User: <%= current_user.name %>
          </font>
        </div>
      </div>
    </td>
  </tr>
  <tr>
    <td>
      <form name="adm_info" align="center">
        <div align="center">
          <table border="1" width="100%">
            <tr>
              <td>
                <font size="4" face=<%= @face %> color="lime"> Your ip : <%= request.remote_ip %> </font>
              </td>
              <td>
                <font size="4" face=<%= @face %> color="lime"> port : <%= request.port %> </font>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <font size="4" face=<%= @face %> color="red"> Current branch : <%= get_git_branch() %> </font>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <font size="4" face=<%= @face %> color="orange"> Users&nbspcount&nbsp:&nbsp<%= User.count %> </font>
            </td>
          </tr>
        </table>
        </div>
      </form>
    </td>
  </tr>
</table>


<br>

<% if logged_in? && current_user.adm == true %>
  <table border="1" width="100%">
    <tr>
      <td width="33%">
        <table border="1" width="100%">
          <tr>
            <td width="33%">
              <%= form_for(:server, url: '/server/admin/posts/0') do |f| %>
                <%= f.submit "Clear", class: "btn btn-primary" %>
              <% end %>
            </td>
            <td width="34%">
              <%= form_for(:server, url: '/server/admin/posts/1') do |f| %>
                <%= f.submit "Load users_list", class: "btn btn-primary" %>
              <% end %>
            </td>
            <td width="33%">
              <%= form_for(:server, url: '/server/admin/posts/2') do |f| %>
                <%= f.submit "Load game_conf", class: "btn btn-primary" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td width="100%" colspan="3">
              <div align="center">
              <% if $view_list == "users_list" || $view_list == "user" %>
                <%= form_for(:server, url: '/server/admin/posts/3') do %>
                  <font size="4" face=<%= @face %> color="lime">
                    <%= text_field_tag(:val) %>
                    <%= submit_tag "Load user by id" %>
                  </font>
                <% end %>
              <% elsif $view_list == "game_conf" || $view_list == "location" %>
                <%= form_for(:server, url: '/server/admin/posts/3') do %>
                  <font size="4" face=<%= @face %> color="lime">
                    <%= text_field_tag(:val) %>
                    <%= submit_tag "Load location" %>
                  </font>
                <% end %>
              <% else %>
                <%= form_for(:server, url: '/server/admin/posts/0') do %>
                  <font size="4" face=<%= @face %> color="lime">
                    <%= text_field_tag(:val) %>
                    <%= submit_tag "button" %>
                  </font>
                <% end %>
              <% end %>
              </div>
            </td>
          </tr>
        </table>
      </td>
      <td width="34%">
        <table border="1" width="100%">
          <tr>
            <td width="100%">
              <div align="center">
                <% if $permit_registration == false %>
                  <%= form_for(:server, url: '/server/admin/posts/4') do |f| %>
                    <%= f.submit "Allow reg", class: "btn btn-primary" %>
                  <% end %>
                <% else %>
                  <%= form_for(:server, url: '/server/admin/posts/4') do |f| %>
                    <%= f.submit "Deny reg", class: "btn btn-primary" %>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        </table>
      </td>
      <td width="33%">
      </td>
    </tr>
    <tr>
      <td width="33%">
        <iframe name="adm_users_frame" scrolling="yes" width="100%" src=<%= "#{get_admin_iframe()}" %>>
        </iframe>
      </td>
      <td width="34%">
      </td>
      <td width="33%">
      </td>
    </tr>
  </table>
<% end %>
