<%- provide(:titlepage, "#{@controller} : #{@page}") %>
<%= render :template => "layouts/application" %>

<% if @show_adm_menu != "layout" %>
  <table align="center" border="1" width="100%">
    <tr>
      <td width="50%">
        <% if logged_in? %>
          <%- if current_user.adm == true %>
            <form name="Adm_menu" align="left">
              <font size="4" face=<%= @face %> color="purple">
                <%= link_to "Admin", :controller => "server", :action => "admin" %>
              </font>
            </form>
          <%- end %>
        <%- end %>
      </td>
      <td width="50%">
        <div name="Ip" align="center">
          <font size="4" face=<%= @face %> color="white"> Your ip : <%= request.remote_ip %> </font>
        </div >
      </td>
    </tr>
  </table>
<% end %>

<h1 align="center" >
  <font size="6" face=<%= @face %> color="green"> Admin </font>
</h1>

<table align="center">
  <tr>
    <td>
      <div class="row" align="center">
        <div class="col-md-6 col-md-offset-3" align="center">
          <font size="4" face=<%= @face %> color="gold">
            User: <%= current_user.name %>
          </font>
        </div>
      </div>
    </td>
  </tr>
  <tr>
    <td>
      <form name="adm_info" align="center">
        <div align="center">
          <font size="4" face=<%= @face %> color="white"> Your ip : <%= request.remote_ip %> </font>
          <br>
          <font size="4" face=<%= @face %> color="white"> port : <%= request.port %> </font>
          <br>
          <font size="4" face=<%= @face %> color="white"> Users&nbspcount&nbsp:&nbsp<%= User.count %> </font>
        </div>
      </form>
    </td>
  </tr>
</table>


<br>

<% if logged_in? && current_user.adm == true %>
  <table border="1" width="100%">
    <tr>
      <td width="33%">
        <table border="1" width="100%">
          <tr>
            <td width="33%">
              <%= form_for(:server, url: '/server/admin/posts/0') do |f| %>
                <%= f.submit "Clear", class: "btn btn-primary" %>
              <% end %>
            </td>
            <td width="34%">
              <%= form_for(:server, url: '/server/admin/posts/1') do |f| %>
                <%= f.submit "Load users_list", class: "btn btn-primary" %>
              <% end %>
            </td>
            <td width="33%">
              <%= form_for(:server, url: '/server/admin/posts/2') do |f| %>
                <%= f.submit "Load game_conf", class: "btn btn-primary" %>
              <% end %>
            </td>
          </tr>
        </table>
      </td>
      <td width="34%">
      </td>
      <td width="33%">
      </td>
    </tr>
    <tr>
      <td width="33%">
        <iframe name="adm_users_frame" scrolling="yes" width="100%" src=<%= "#{get_admin_iframe()}" %>>
        </iframe>
      </td>
      <td width="34%">
      </td>
      <td width="33%">
      </td>
    </tr>
  </table>
<% end %>
