<%- provide(:titlepage, "#{@controller} : #{@page}") %>
<%= render :template => "layouts/application" %>

<% if @show_adm_menu != "layout" %>
  <table align="center" border="0" width="100%">
    <tr>
      <td width="50%">
        <% if logged_in? %>
          <%- if current_user.adm == true %>
            <form name="Adm_menu" align="left">
              <font size="4" face=<%= @face %> color="purple">
                <%= link_to "Admin", :controller => "server", :action => "admin" %>
              </font>
            </form>
          <%- end %>
        <%- end %>
      </td>
      <td width="50%">
        <div name="Ip" align="center">
          <font size="4" face=<%= @face %> color="white"> Your ip : <%= request.remote_ip %> </font>
        </div >
      </td>
    </tr>
  </table>
<% end %>
<div class="three"><h1> Exodus-MORPG </h1></div>
<div class="bubbles"></div>

<form name="Main_menu" align="center">
  <%- @links_main_menu.each_with_index do |value, index|%>
    <%- if (index % 3 == 0)%>
    <div class="ui vertical pointing menu">
      <a class="item">
        <font size="8" face=<%= @face %>>
          <%= link_to value, :controller => @links_main_menu[index + 1], :action =>  @links_main_menu[index + 2] %>
        </font>
      </a>
    </div>
    <%- end %>
  <%- end %>

  <br>

  <p align="center">
    <font size="4" face=<%= @face %> color="yellow"> Coming soon </font>
  </p>
</form>
